# ISO Tracker - Production Environment Variables Template
# Copy this to .env.production and fill in your values

# ===========================================
# REQUIRED - Supabase Configuration
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# REQUIRED - Application URLs
# ===========================================
NEXT_PUBLIC_APP_URL=https://iso-tracker.app
NEXTAUTH_URL=https://iso-tracker.app

# ===========================================
# REQUIRED - Email (Resend)
# ===========================================
RESEND_API_KEY=re_xxxxxxxxxxxxx
RESEND_FROM_EMAIL=notifications@iso-tracker.app

# ===========================================
# REQUIRED - Security
# ===========================================
JWT_SECRET=your-64-character-hex-secret
CRON_SECRET=your-32-character-hex-secret

# ===========================================
# OPTIONAL - Analytics (PostHog)
# ===========================================
NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxxxxxxxxxx
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ===========================================
# OPTIONAL - Error Monitoring (Sentry)
# ===========================================
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@oXXXXX.ingest.sentry.io/XXXXX
SENTRY_AUTH_TOKEN=sntrys_xxxxxxxxxxxxx
SENTRY_ORG=your-org
SENTRY_PROJECT=iso-tracker
NEXT_PUBLIC_SENTRY_RELEASE=iso-tracker@1.0.0

# ===========================================
# OPTIONAL - Stripe (Future)
# ===========================================
# STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxx

# ===========================================
# NODE ENVIRONMENT
# ===========================================
NODE_ENV=production
